<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ui.auth.SigninFragment">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="25sp"
        android:hint="  Email"
        android:textColorHint="@color/colorMoreTransparentWhite"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:background="#11000000"
        android:ems="10"
        android:drawableLeft="@drawable/ic_email"
        android:textSize="22sp"
        android:drawableStart="@drawable/ic_email" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:hint="  Password"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:background="#11000000"
        android:ems="10"
        android:textSize="22sp"
        android:imeActionLabel="Sign In"
        android:imeOptions="actionDone"
        android:layout_below="@+id/email"
        android:drawableLeft="@drawable/ic_password"
        android:layout_marginBottom="40dp"
        android:textColorHint="@color/colorMoreTransparentWhite"
        android:drawableStart="@drawable/ic_password" />

    <Button
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:text="Sign In"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/alegreya_bold_italic"
        android:textAllCaps="false"
        android:background="@drawable/round_button_purple"
        android:layout_marginBottom="2sp"/>


    <Button
        android:id="@+id/signInToRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:text="Don't have an account? Register here."
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/abril_fatface"/>


</RelativeLayout>