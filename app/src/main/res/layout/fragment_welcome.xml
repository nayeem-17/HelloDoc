<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.WelcomeFragment"
    android:id="@+id/doctor_patient_confirmation">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">  <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="100dp"
            android:gravity="center"
            android:text="Are you a doctor?"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        <Button
            android:id="@+id/yes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:gravity="center"
            android:text="Yes" />

        <Button
            android:id="@+id/no_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yes_button"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:gravity="center"
            android:text="No" />
    </RelativeLayout>
</FrameLayout>